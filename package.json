  "devDependencies": {
    "@adobe/aem-cli": "^16.7.15",
    "@babel/core": "7.22.10",
    "@babel/eslint-parser": "7.22.10",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@web/test-runner": "0.15.1",
    "@web/test-runner-commands": "0.6.5",
    "chai": "4.3.7",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "8.47.0",
